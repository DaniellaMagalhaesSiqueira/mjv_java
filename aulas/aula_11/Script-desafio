
--DDL - Data Definition Language (Linguagem de Definição de dados)
--CREATE, ALTER e DROP

--DML - Data Manipulation Language (Linguagem de Manipulação de Dados)
--INSERT, UPDATE e DELETE

--DQL - Data Query Language - Linguagem de consulta de dados
--SELECT

create database desafio;

--mudar o banco default para desafio

create table tab_ficha_profissional(
	id serial primary key,
	nome varchar(50),
	email varchar(50),
	--considerando o código do país + DDD + parêntes e traço
	telefone varchar(18),
	logradouro varchar(100),
	numero varchar(5),
	bairro varchar(50),
	cidade varchar(80),
	estado char(2),
	-- no postegres é usado o numeric
	-- no mysql é usado o decimal
	salario_minimo numeric(8,2),
	salario_maximo numeric(8,2),
	estrangeiro char(1)
);


insert into tab_ficha_profissional values( 
-- o valor do id é autoincrement, portanto usamos default
default,
'Daniella M. Siqueira', 'daniella@gmail.com', '55022998741569', 'Rua Rio Branco', '1567',
'Centro', 'Macaé', 'RJ', 2567.80, 5000.0, '0'
);
-- inserindo estrangeiro para mostrar a exclusão
insert into tab_ficha_profissional values( 
default,
